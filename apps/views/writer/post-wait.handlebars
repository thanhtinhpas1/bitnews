<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h1 class="table-header text-center">Quản lí bài viết</h1>
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary"></h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Title</th>
                  <th>Post date</th>
                  <th>Fail reason</th>
                  <th>Created at</th>
                  <th>Edit</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th width="10%">ID</th>
                  <th width="25%">Title</th>
                  <th width="25%">Post date</th>
                  <th width="25%">Fail reason</th>
                  <th width="15%">Edit</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each posts}}
                <tr>
                  <td>{{id}}</td>
                  <td>{{title}}</td>
                  {{#if post_date}}
                  <td>{{moment post_date format="YYYY/MM/DD hh:mm:ss"}}</td>
                  {{else}}
                  <td>{{post_date}}</td>
                  {{/if}}
                  <td>{{fail_reason}}</td>
                  <td>{{moment created_at format="YYYY/MM/DD hh:mm:ss"}}</td>
                  <td class="text-center">
                      <a href="edit-post/{{id}}" class="btn btn-outline-success" role="button">
                        <i class="fas fa-pen"></i>
                      </a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>