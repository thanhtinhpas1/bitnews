<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h1 class="table-header text-center">Quản lí bài viết</h1>
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Post table</h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Writer name</th>
                  <th>Category</th>
                  <th>Title</th>
                  <th>Created at</th>
                  <th>Edit</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th width="5%">ID</th>
                  <th width="20%">Writer name</th>
                  <th width="20%">Category</th>
                  <th width="20%">Title</th>
                  <th width="20%">Created at</th>
                  <th width="15%">Edit</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each listPost}}
                <tr>
                  <td>{{id}}</td>
                  <td>{{username}}</td>
                  <td>{{name}}</td>
                  <td>{{title}}</td>
                  <td>{{moment created_at format="YYYY/MM/DD h:mm:s"}}</td>
                  <td class="text-center">
                    <a href="/editor/detail/{{id}}" class="btn btn-outline-info" role="button">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/editor/refuse-post/{{id}}" class="btn btn-outline-danger" role="button">
                      <i class="fas fa-exclamation-circle"></i>
                    </a>
                    <a href="/editor/confirm-post/{{id}}" class="btn btn-outline-success" role="button">
                      <i class="fas fa-check-circle"></i>
                    </a>                  
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>