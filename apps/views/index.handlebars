						</div><!-- mb-30 -->
					</div><!-- col-md-4 -->

					<div class="col-sm-4">
						<div class="mb-30">
							<h5 class="color-primary mb-20"><b>Tin phổ biến</b></h5>
							{{#each this.popularNew}}
							<div class="mb-20">
								<a class="color-white" href="/single-post/{{id}}"><b>{{title}}</b></a>
								<h6 class="mt-10">{{moment post_date format="YYYY/MM/DD h:mm:s"}}</h6>
							</div>
							<div class="brdr-ash-1 opacty-2 mr-30"></div>
