			</div><!-- oflow-hidden -->
		</div><!-- container -->
	</footer>

	<script>
		var listCat = document.getElementsByClassName('post-category');
		var min = 1, max = 9;
		for (var i = 0; i < listCat.length; i++) {
			var random = Math.floor(Math.random() + i) % max + 1;
			console.log(random);
			listCat[i].classList.add('cat-' + random);
		}

	</script>

	<script src="js/jquery-3.4.0.min.js"></script>

	<script src="js/jquery.sticky.js"></script>

	<script src="js/plugins.js"></script>

	<script src="js/scripts.js"></script>
</body>

</html>